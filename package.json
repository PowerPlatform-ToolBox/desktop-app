{
  "name": "powerplatform-toolbox",
  "version": "1.0.0",
  "description": "A universal desktop app that contains multiple tools to ease the customization and configuration of Power Platform",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run build && electron .",
    "build": "tsc && tsc -p tsconfig.renderer.json && npm run copy-static",
    "copy-static": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "package": "npm run build && electron-builder"
  },
  "keywords": [
    "powerplatform",
    "dataverse",
    "electron",
    "toolbox"
  ],
  "author": "PowerPlatform ToolBox",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2"
  },
  "build": {
    "appId": "com.powerplatform.toolbox",
    "productName": "PowerPlatform ToolBox",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "PowerPlatform-ToolBox",
      "repo": "desktop-app"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
