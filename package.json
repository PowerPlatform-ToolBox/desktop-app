{
  "name": "powerplatform-toolbox",
  "version": "1.0.0",
  "description": "A universal desktop app that contains multiple tools to ease the customization and configuration of Power Platform",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.renderer.json && npm run copy-main && npm run copy-toolboxAPIBridge && npm run copy-assets && npm run copy-vendor",
    "copy-main": "shx mkdir -p dist/renderer && shx cp src/renderer/index.html dist/renderer/ && shx cp src/renderer/styles.css dist/renderer/",
    "copy-toolboxAPIBridge": "shx cp src/renderer/toolboxAPIBridge.js dist/renderer/",
    "copy-assets": "shx cp src/renderer/tools.json dist/renderer/ && shx cp -r src/renderer/icons dist/renderer/",
    "copy-vendor": "shx mkdir -p dist/renderer/vendor && shx cp node_modules/@fluentui/web-components/dist/web-components.min.js dist/renderer/vendor/fluent-web-components.js",
    "dev": "npm run build && electron .",
    "watch": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate"
  },
  "keywords": [
    "powerplatform",
    "dataverse",
    "electron",
    "toolbox"
  ],
  "author": "PowerPlatform ToolBox",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/node": "^20.19.21",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "all-contributors-cli": "^6.20.0",
    "auto-changelog": "^2.3.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "eslint": "^8.54.0",
    "shx": "^0.4.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.0",
    "@fluentui/svg-icons": "^1.1.312",
    "@fluentui/tokens": "^1.0.0-alpha.22",
    "@fluentui/web-components": "^2.6.1",
    "@types/uuid": "^10.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.powerplatform.toolbox",
    "productName": "Power Platform Tool Box",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "PowerPlatformToolBox",
      "repo": "desktop-app"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon256x256.png"
    }
  }
}