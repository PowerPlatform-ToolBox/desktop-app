# pnpm configuration for Power Platform Tool Box

# Use symlinks to save disk space (default behavior)
# This creates symlinks from node_modules to the global store
symlink=true

# Public hoist pattern - hoist dev dependencies for build tools
# This allows build tools to work properly while keeping tool dependencies isolated
# We don't hoist to the root, but allow public hoisting for dev dependencies
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*vite*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=@types/*

# Don't shamefully hoist - this maintains strict dependency isolation
shamefully-hoist=false

# Store directory for pnpm packages (default: ~/.pnpm-store)
# Using default location to share packages across projects
# store-dir=/path/to/store

# Enable strict peer dependencies checking
strict-peer-dependencies=true

# Auto-install peers to avoid installation issues
auto-install-peers=true

# Save exact versions in package.json
save-exact=false

# Use the public npm registry
registry=https://registry.npmjs.org/

# Enable side-effects cache for faster installations
side-effects-cache=true

# Prefer frozen lockfile for reproducible builds
# This will be used in CI/CD
# prefer-frozen-lockfile=true
